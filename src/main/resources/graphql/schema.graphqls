type User @key(fields: "id") {
    id: ID!
    name: String
    email: String!
    affiliatedSchool: String!
    role: UserRole!
}

enum UserRole {
    ADMIN
    PROFESSOR
    STUDENT
}

type Query {
    userById(id: ID!): User
    userByEmail(email: String!): User
    allUsers: [User]
}

input CreateUserInput {
    name: String!
    email: String!
    affiliatedSchool: String!
    role: UserRole!
}

type Mutation {
    createUser(input: CreateUserInput!): User
}